<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bookshelf.MAUI.Views.Controls.CalendarCellView"
             x:Name="root">
    <VerticalStackLayout BackgroundColor="{Binding BackgroundColor, Source={x:Reference root}}">
        <Label Text="{Binding DayLabel, Source={x:Reference root}}" VerticalOptions="Center" HorizontalOptions="Center" />
        <BoxView Color="Red" HeightRequest="10" WidthRequest="10" />
    </VerticalStackLayout>
</ContentView>
