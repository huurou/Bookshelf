<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Bookshelf.MAUI.Views.Controls"
             x:Class="Bookshelf.MAUI.Views.MainPage"
             Title="NewPage1">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <HorizontalStackLayout>
            <Button Text="←" Clicked="L_Button_Clicked"/>
            <Button Text="→" Clicked="R_Button_Clicked"/>
        </HorizontalStackLayout>
        
        <StackLayout>
            <controls:CalendarView x:Name="Calendar"/>
        </StackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Image x:Name="image"/>
    </VerticalStackLayout>
</ContentPage>